---
import Layout from "@/layouts/Layout.astro";
import FacebookIcon from "@/components/icons/Facebook.astro";
import GithubIcon from "@/components/icons/Github.astro";
import InstagramIcon from "@/components/icons/Instagram.astro";
import LinkedinIcon from "@/components/icons/Linkedin.astro";
import TwitterIcon from "@/components/icons/X.astro";

const appName = import.meta.env.APP_NAME ?? "";
const siteDomain = import.meta.env.SITE_DOMAIN ?? "";
---

<Layout title={appName}>
  <main class="hero relative h-screen bg-white">
    <div class="absolute left-0 top-0 p-4 text-6xl font-bold text-white">{siteDomain}</div>
    <div class="absolute bottom-0 right-0 m-4 rounded-sm bg-black/50 p-4 text-white">
      <h2 class="text-2xl font-semibold">Who am I ?</h2>
      <p class="mt-2">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
      <div class="mt-4 flex space-x-2">
        <FacebookIcon className="text-white" />
        <TwitterIcon className="text-white" />
        <InstagramIcon className="text-white" />
        <LinkedinIcon className="text-white" />
        <GithubIcon className="text-white" />
      </div>
    </div>
    <div class="absolute bottom-0 left-0 rounded-sm bg-black/50 p-2 text-xl text-light">Â©2024 {siteDomain}</div>
  </main>
</Layout>
