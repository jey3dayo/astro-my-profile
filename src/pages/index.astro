---
import Content from "@/contents/profile.md";
import Layout from "@/layouts/Layout.astro";

const appName = import.meta.env.APP_NAME ?? "";
const siteDomain = import.meta.env.SITE_DOMAIN ?? "";
---

<Layout title={appName}>
  <main class="hero relative min-h-screen bg-white pb-20">
    <div class="absolute left-0 top-0 p-4 text-6xl font-bold text-white">{siteDomain}</div>
    <div class="absolute bottom-10 right-0 m-4 rounded-sm bg-black/50 p-4 text-white">
      <h2 class="text-3xl font-semibold">Who am I ?</h2>
      <p class="mt-2"><Content /></p>
    </div>
    <footer class="text-md absolute bottom-0 left-0 w-full bg-black/50 p-0 text-center text-light">
      Â©{new Date().getFullYear()}
      {siteDomain}
    </footer>
  </main>
</Layout>
